{
  "type": "App",
  "name": "poc",

  "location": "eastus",
  "properties": {
    "environmentId": "${ENVIRONMENT}",
    "configuration": {
      "ingress": {
        "allowInsecure": true,
        "external": true,
        "targetPort": 8080
      }
    },
    "template": {
      "containers": [
        {
          "image": "duglin/echo",
          "name": "echo"
        }
      ],
      "serviceBinds": [
        {
		  // ${ [[sub:]rg:]Microsoft.App/containerapps@APIVERSION/NAME.PROP 
		  //
		  // ${ [[sub:]rg:]type[@api]/name.prop }
		  // GET /subscriptions/$sub/resourceGroup/$rg/providers/$type/$name
          // "serviceId": "${App/pocredis.id}",
          // "serviceId": "/subscriptions/${SUBSCRIPTION}/resourceGroups/${RESOURCEGROUP}/providers/Microsoft.App/containerapps/pocredis",
          // "serviceId": "${Microsoft.App/containerapps/pocredis.id}",
          "serviceId": "${App/pocredis.id}",
          "name": "pocredis"
        }
      ]
    }
  }
}
